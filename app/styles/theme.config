/*******************************
        Theme Selection
*******************************/

/* To override a theme for an individual element
   specify theme name below
*/

/* Global */
@site       : 'celeste';
@reset      : 'celeste';

/* Elements */
@button     : 'celeste';
@container  : 'celeste';
@divider    : 'celeste';
@flag       : 'celeste';
@header     : 'celeste';
@icon       : 'celeste';
@image      : 'celeste';
@input      : 'celeste';
@label      : 'celeste';
@list       : 'celeste';
@loader     : 'celeste';
@rail       : 'celeste';
@reveal     : 'celeste';
@segment    : 'celeste';
@step       : 'celeste';

/* Collections */
@breadcrumb : 'celeste';
@form       : 'celeste';
@grid       : 'celeste';
@menu       : 'celeste';
@message    : 'celeste';
@table      : 'celeste';

/* Modules */
@accordion  : 'celeste';
@checkbox   : 'celeste';
@dimmer     : 'celeste';
@dropdown   : 'celeste';
@embed      : 'celeste';
@modal      : 'celeste';
@nag        : 'celeste';
@popup      : 'celeste';
@progress   : 'celeste';
@rating     : 'celeste';
@search     : 'celeste';
@shape      : 'celeste';
@sidebar    : 'celeste';
@sticky     : 'celeste';
@tab        : 'celeste';
@transition : 'celeste';

/* Views */
@ad         : 'celeste';
@card       : 'celeste';
@comment    : 'celeste';
@feed       : 'celeste';
@item       : 'celeste';
@statistic  : 'celeste';

/*******************************
            Folders
*******************************/

/* Path to theme packages */
@themesFolder : 'themes';

/* Path to site override folder */
@siteFolder   : '../app/';


/*******************************
         Import Theme
*******************************/

@import "theme.less";

/* End Config */
